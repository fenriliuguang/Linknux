<!--pages/home/home.wxml-->
<view>
    <view>
        <view>
            <input class="weui-input"  placeholder="搜索"/>
        </view>
        <view>
            <image src="../../static/icons/添加-线性.png"></image>
        </view>
    </view>
    <view>
        <view data-tab="guanzhu" bindtap="ontab">关注</view>
        <view data-tab="resou" bindtap="ontab">热搜</view>
        <view data-tab="fenqu" bindtap="ontab">分区</view>
        <view data-tab="dashen" bindtap="ontab">大神榜</view>
    </view>


    <view>
        <view wx:if="{{tab.guanzhu}}">
            关注内容 czh
        </view>
        <view wx:if="{{tab.resou}}">
            热搜内容 艾震文
        </view>
        <view wx:if="{{tab.fenqu}}">
            分区内容  zlr
            <view>
                十个分类
                <view class="fenqu_box fenqu_box-1">
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <!-- 图片待之后选择应该插入的图片-->
                        <view class="fenqu_box-item-text">Ubuntu</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">Mint</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">Kali</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">MX Linux</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">Pop!_OS</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">Solus</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">Manjaro</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">elementary OS</view>
                    </view>
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">Tali</view>
                    </view> 
                    <view class="fenqu_box-item">
                        <image class="fenqu_box-item-picture" src="../../static/icons/已收藏.png"></image>
                        <view class="fenqu_box-item-text">查看更多</view>
                    </view>
                </view>
            </view>
            <view>
                <view class="fenqu_page" wx:for="{{ fenqu_page}}" wx:for-item="item">
                    <view class="fenqu_box-title" >{{item.title}}</view>
                    <view class="fenqu_box-word" >{{item.word}}</view>
                    <view class="buttun" >
                        <view class="fenqu_box-writer" >{{item.writer}}</view>
                        <view class="fenqu_box-data" >{{item.data}}</view>
                        <image  class="eye_image" src="../../static/icons/眼睛.png"></image>
                        <view class="fenqu_box-count" >{{item.count}}</view>
                    </view>

                </view>
            </view>
        </view>
        <view wx:if="{{tab.dashen}}">
            大神榜内容 HYJ
        </view>
    </view>
</view>
