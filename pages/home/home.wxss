/* 我的贡献区域 */
.myContainer {
  height: 100rpx;
  width: 95%;
  display: flex;
  font-weight: bold;
  align-items: center;
  justify-content:unset;
  text-align: center;
  border: 1rpx solid #d3d3d3;
  box-shadow: 20rpx;
  border-radius: 20rpx;
  margin: auto;
}
.myContainer .myContribution {
  width: 72rpx;
  font-size: 30rpx;
  color: #116500;
  margin-left: 5rpx;
}
.myContainer .myAvatar {
  width: 80rpx;
  height: 80rpx;
}
.myContainer .name {
  font-size: 30rpx;
  width: 95rpx;
  /* 多行文本隐藏 */
  display: -webkit-box;
  white-space: wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.myContainer .sum {
  width: 170rpx;
  font-size: 27rpx;
  font-weight: normal;
  margin-left: 15rpx;
}
.myContainer .number {
  font-size: 26rpx;
  color: #3fb39d;
  width: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  
}
.myContainer .rankFlag {
  width: 50rpx;
  height: 50rpx;
  margin: 0 5rpx 0 5rpx;
}
.myContainer .myRank {
  width: 150rpx;
  font-size: 27rpx;
  color: #3d8585;
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  right: 0;
}

