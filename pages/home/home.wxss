.fenqu_box {
  background-color: white;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.fenqu_box-item {
  width: 142rpx;
  height: 142rpx;
  background-color: white;
  margin: 5rpx;
}
.fenqu_box-item .fenqu_box-item-text{
  width:142rpx;
  height: 20rpx;
  background-color: white;
  font-size: 20rpx;
  margin-top: 22rpx;
  color: black;
  text-align: center;
}
.fenqu_page {
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  height: 150rpx;
  margin-top: 20rpx;
