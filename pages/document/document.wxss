/* pages/document/document.wxss */
page{
  width:100%;
  height: 100%;
}
.date{
  font-size: 10px;
}
.check{
  height: 150px;
  border-bottom:1px solid whitesmoke;
}
.title{
  text-align: center;
  font-size: 20px;
  font-weight: 600;
}
.detail{
  align-items: flex-end;
  display: flex;
  margin-top: 30px;
  justify-content: space-around;
}
.user{
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}
.wechat{
  border-radius: 50%;
  margin-right: 5px;
  width: 50px;
  height: 50px;
}
.gz{
  text-align: center;
  font-size: 15px;
  box-shadow: 1px 1px 1px rgb(9, 196, 196);
  line-height: 35px;
  width: 60px;
  height: calc(60 * 0.618px);
  border-radius: 7px;
}
.g{
  background-color: yellow;
}
.dg{
  border: 1rpx solid rgb(124, 124, 124);
  background: rgb(179, 179, 179);
}
.like_box{
  background-color: rgba(255, 250, 250,0.7);
  z-index: 100;
  height: 90px;
  position: absolute;
  top:160px;
  right: 0;
  padding: 5px 10px;
  display: flex;
  flex-direction: column;
  border: 1px solid silver ;
  border-radius: 10px 0 0 10px;
  border-right: none;
  justify-content: space-around;
}
.like_box image{
  width: 25px;
  height: 25px;
}