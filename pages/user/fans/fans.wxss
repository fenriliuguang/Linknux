/* pages/user/fans/fans.wxss */
page{
  height: 100%;
}
.v_m_user_icon{
  position: relative;
  margin-right: 10px;
  float: left;
}
.v_m_user_icon::after{
  content: 'v';
  z-index: 10;
  text-align: center;
  line-height: 10px;
  bottom: 2px;
  right: 0px;
  border: 2px solid white;
  position: absolute;
  background-color: blueviolet;
  border-radius: 50%;
  font-size: 10px;
  color: white;
  width: 13px;
  height:13px;
}
.box{
  margin: 5px;
  border-radius: 5px;
  background-color: #fff;
  padding:10px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0px 0px 3px #40CF68;
}
.img{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.f_true{
  border-color: #81838F;
  color: #81838F;
}
.f_false{
  border-color: #40CF68;
  color: #40CF68;
}
.switch{
  border: 1px solid;
  border-radius: 5px;
  width: 66px;
  text-align: center;
  font-size: 12px;
  line-height: calc(100% + 13px);
  height: 25px;
}
.name{
  float: right;
}
.tab{
  display: flex;
  height: 50px;
  justify-content: space-around;
  align-items: flex-end;
  border-bottom: 1px solid #d3e2d7;
}
.tab_item{
  width: 25%;
  height: 30px;
  text-align: center;
}
.ontab{
  position: relative;
  color: #40CF68;
}
.ontab::after{
  content:"";
  position: absolute;
  right: calc(50% - 40%);
  bottom: 0;
  width:80%;
  height:2px;
  background-color: #40CF68;
}