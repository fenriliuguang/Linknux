<!--pages/user/user.wxml-->
<view>
    <view class="title">用户中心</view>
    <view class="userInfo">
        <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
        <view class="detail">
            <view class="username">{{userInfo.nickName}}</view>
        </view>
    </view>
    <view bindtap="favorites" class="item">收藏夹</view>
    <view bindtap="contribution" class="item">我的贡献</view>
    <view bindtap="fans" class="item">关注/粉丝</view>
</view>



