/* pages/user/user.wxss */
.history_top {
    background-color: white;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    height: 100rpx;
}
.history_top .back_picture{
    width: 80rpx;
    height: 80rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
}
.history_top .title{
    width: 550rpx;
    height: 100rpx;
    background-color: white;
    font-size: 80rpx;
    margin-left: 100rpx;
    color: black;
}
.history_page{
    display: flex;
    flex-wrap: wrap;
    width: 750rpx;
    height: 80rpx;
    margin-top: 5rpx;
    padding-top:10rpx;
    padding-bottom:10rpx;
    border-bottom: #eee solid 1px;
    /*align-items: center;*/
}
.history_page .text{
    width: 350rpx;
    height: 60rpx;
    background-color: white;
    font-size: 40rpx;
    margin-top: 20rpx;
    color: black;
}
.history_page .date{
    width: 200rpx;
    height: 60rpx;
    margin-top: 20rpx;
    background-color: white;
    margin-left: 50rpx;
    font-size: 30rpx;
    color: black;
}
.history_page .time{
    width: 100rpx;
    height: 60rpx;
    margin-top: 20rpx;
    background-color: white;
    font-size: 30rpx;
    margin-left: 20rpx;
    color: black;
}
