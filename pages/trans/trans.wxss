/* pages/trans/trans.wxss */
page{
  height: 100%;
}
.button_view{
  height: 60px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.btn{
  width: 33%;
  height: 36px;
  text-align: center;
  border-radius: 5px;
  font-size: 14px;
  color: white;
  line-height: calc(100% + 20px);
  background-color: #00CD00;
}

.title{
  height: 40px;
  font-size: 20px;
  text-align: center;
  line-height: calc(100% + 20px);
  border-bottom: 3px double #00CD00;
  font-weight: 500;
}
.box{
  border-bottom: 1px solid #000;
  padding: 0 5%;
}

.box_title{
  margin-top: 5px;
  font-size: 18px;
}

.detail{
  display: flex;
  margin: 20px 0 5px 0;
  justify-content: flex-end;
}

.detail_img{
  width: 20px;
  height: 20px;
  margin: 0 5px;
}

.detail view{
  width: 25px;
  text-align: center;
}